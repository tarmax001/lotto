<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Lotto</display-name>

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>by.tarmax.lotto.web.UserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bidServlet</servlet-name>
        <servlet-class>by.tarmax.lotto.web.BidServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>bidServlet</servlet-name>
        <url-pattern>/bids</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>pairServlet</servlet-name>
        <servlet-class>by.tarmax.lotto.web.PairServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>pairServlet</servlet-name>
        <url-pattern>/pairs</url-pattern>
    </servlet-mapping>

</web-app>
